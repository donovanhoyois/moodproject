@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using MoodProject.App.Services
@using MoodProject.Core.Ports.In
@using MoodProject.Services
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager
@inject CacheService CacheService
@inject IUsersService UsersService

@inherits IdentityHelper

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MoodProject</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView>
            <Authorized>
                <HasAcceptedGdpr>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="quizz" Match="NavLinkMatch.All">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Questionnaire
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="profile" Match="NavLinkMatch.All">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Mon profil
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="medications" Match="NavLinkMatch.All">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Médicaments
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="rooms" Match="NavLinkMatch.All">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Discussions
                        </NavLink>
                    </div>
                </HasAcceptedGdpr>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="gdpr" Match="NavLinkMatch.All">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> RGPD
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Moderator">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/rooms/moderation" Match="NavLinkMatch.All">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Gérer les contenus
                    </NavLink>
                </div> 
            </Authorized>
        </AuthorizeView>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="resources" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Ressources
            </NavLink>
        </div>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="#" Match="NavLinkMatch.All" @onclick="BeginSignOut">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Se déconnecter
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="authentication/login" Match="NavLinkMatch.All">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Se connecter
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
        <div class="version">
            <p>Version: @InstalledVersion</p>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    
    private string InstalledVersion = string.Empty;

    private bool HasAcceptedGdpr = false;

    protected override async Task OnInitializedAsync()
    {
        InstalledVersion = await CacheService.GetInstalledVersion();
        HasAcceptedGdpr = await CacheService.GetHasAcceptedGdpr(await GetUserId());
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    // Auth
    private async Task BeginSignOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }
}
